CREATE TABLE Claim WITH (kafka_topic='CIMS.Financial.Claim', partitions=10, value_format='AVRO', KEY='CL_ClaimID');
CREATE TABLE ClaimStatus WITH (kafka_topic='CIMS.Financial.ClaimStatus', partitions=10, value_format='AVRO', KEY='CS_ClaimStatusID');
CREATE TABLE ClaimStatusClaimLink WITH (kafka_topic='CIMS.Financial.ClaimStatusClaimLink', partitions=10, value_format='AVRO', KEY='CS_ClaimStatusID');
CREATE STREAM ClaimState WITH (kafka_topic='CIMS.Reference.ClaimState', partitions=10, value_format='AVRO', KEY='CB_ClaimStateID');

CREATE STREAM Claim_Output AS SELECT * FROM Claim;
CREATE STREAM ClaimStatus_Output AS SELECT * FROM ClaimStatus;
CREATE STREAM ClaimStatusClaimLink_Output AS SELECT * FROM ClaimStatusClaimLink;
CREATE STREAM ClaimState_Output AS SELECT * FROM ClaimState;

drop TABLE Claim;
drop TABLE ClaimStatus;
drop TABLE ClaimStatusClaimLink;
drop stream ClaimState;
drop stream Claim_Output;
drop stream ClaimStatus_Output;
drop stream ClaimStatusClaimLink_Output;
drop stream ClaimState_Output;

